<div class = "top_admin_user_show">
 <h2 class = admin_user_show_title >
  会員詳細画面
 </h2>
 <table class="table">
  <tr>
    <th class = admin_user_show_content scope="col">user</th>
    <th class = admin_user_show_content scope="col">user_id</th>
    <th class = admin_user_show_content scope="col">name</th>
    <th class = admin_user_show_content scope="col">sex</th>
    <th class = admin_user_show_content scope="col">birthdate</th>
    <th class = admin_user_show_content scope="col">age</th>
    <th class = admin_user_show_content scope="col">mail</th>
    <th class = admin_user_show_content scope="col">status</th>
  </tr>
   <tr>
    <td class = "admin_user_show_content" >
     <% if @user.image.attached? %>
      <%= image_tag @user.image, size: "100x100" %>
       <% else %>
      <%= image_tag asset_path("no_image.jpg") %>
       <% end %>
    </td>
    <td class = "admin_user_show_contents" >
     <%= @user.id %>
    </td>
    <td class = "admin_user_show_contents" >
     <%= @user.name %>
    </td>
    <td class = "admin_user_show_contents" >
     <%= @user.sex %>
    </td>
    <td class = "admin_user_show_contents" >
     <%= @user.birthdate %>
    </td>
    <td class = "admin_user_show_contents" >
     <%= @user.age %>
    </td>
    <td class = "admin_user_show_contents" >
     <%= @user.email %>
    </td>
    <td class = "admin_user_show_contents" >
     <%= @user.is_active %>
    </td>
    <td class = "admin_user_show_contents" >
     <%= link_to "編集する",edit_admin_user_path(@user.id) %>
    </td>
   </tr>
 </table>
</div>