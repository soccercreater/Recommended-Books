<% @books.each do |book| %>
 <% if book.image.attached? %><br>
   <%= image_tag book.image, size: "150x150" %></th>
  <% else %>
   <%= image_tag 'book', size: "150x150" %></th>
  <% end %><br>
   <%= link_to book_path(book.id) do %>
   ID<%= book.id %><br>
   <% end %>
   本のタイトル<%= book.title %><br>
   本の著者<%= book.author %><br>
   この本を選んだ理由<br>
   <% book.posts.each do |book_post| %>
    <%= book_post.reason %>
    <%= link_to "編集", edit_post_path(book_post.id) %>
    <%= link_to "削除", destroy_post_path(book_post.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
   <% end %>
   <%= link_to "コメントを書く", new_assessment_path(book_id: book.id) %>
<% end %>

