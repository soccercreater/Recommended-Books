<h4 class = "user_edit_title">
 会員情報編集
</h4>
 <div class = "top_user_edit">
    <%= form_with model: @user,method: :patch, local:true do |f| %>
    <% if @user.image.attached? %>
     <%= image_tag @user.image, size: "100x100" %>
    <% else %>
     <%= image_tag "no_image.jpg" %>
    <% end %><br>
     <%= f.file_field :image, placeholder: "プロフィール画像", accept: "image/*" %>
    <h4 class = "user_edit_content">name</h4>
    <%= f.text_field :name %>
    <h4 class = "user_edit_content">sex</h4>
    <%= f.text_field :sex %>
    <h4 class = "user_edit_content">birthdate</h4>
     <%= f.text_field :birthdate %>
    <h4 class = "user_edit_content">age</h4>
     <%= f.text_field :age %>
    <h4 class = "user_edit_content">mail</h4>
     <%= f.text_field :email %><br>

   <%= f.submit '変更を保存する' %>
   <%= link_to "退会する",  unsubscribe_path %>
  <% end %>
 </div>
