<div class = ></div>
  <h4 class = user_edit >会員情報編集</h4>
 <table class="table">
  <thead>

    <th class = user_edit_content scope="col"><%= form_with model: @user,method: :patch, local:true do |f| %></th>
     <p>画像</p>
     <% if @user.image.attached? %>
      <%= image_tag @user.image, size: "100x100" %>
     <% else %>
      <%= image_tag 'no_image', size: "100x100" %>
     <% end %><br>
     <%= f.file_field :image, placeholder: "プロフィール画像", accept: "image/*" %>
     <h4>名前</h4>
     <%= f.text_field :name %>
     <h4>性別</h4>
     <%= f.text_field :sex %>
     <h4>生年月日</h4>
      <%= f.text_field :birthdate %>
     <h4>年齢</h4>
      <%= f.text_field :age %>
     <h4>メールアドレス</h4>
      <%= f.text_field :email %><br>

    <%= f.submit '変更を保存する' %>
    <%= link_to "退会する",  unsubscribe_path %>
  <% end %>