<% if @book.image.attached? %>
   <%= image_tag @book.image, size: "150x150" %></th>
  <% else %>
   <%= image_tag 'book', size: "150x150" %></th>
  <% end %><br>
<%= @assessment.comment %>


   <div>
  <p>コメント件数：<%= @book.assessments.count %></p>
  <% @assessments.each do |assessments| %>
   <%= assessment.strftime('%Y/%m/%d') %><%= assessment %>
  <% end %>
</div>

<div>
  <%= form_with model: [Assessment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>