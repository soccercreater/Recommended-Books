<div class = "sign">
 <h2 class="signup_title">
   新規会員登録
 </h2>
  <div class = signup_content>
     <%= render "public/shared/error_messages", resource: resource %>
      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= f.file_field :image, accept: "image/*" %>
     <div>
      <%= f.label :name %><br />
      <%= f.text_field :name, placeholder: "Book太郎" %>
     </div>
      <%= f.label :sex %><br />
      <%= f.text_field :sex, placeholder: "男(man)or女(woman)"  %>
     <div>
      <%= f.label :birthdate %><br />
      <%= f.text_field :birthdate, placeholder: "(YYYY/MM/DD)"  %>
     </div>
     <div>
      <%= f.label :age %><br />
      <%= f.text_field :age, placeholder: "22"  %>
     </div>
     <div class="field">
       <%= f.label :mail %><span class = "user_mail_info">(必須)</span><br />
       <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@sample"  %>
     </div>
     <div class="field">
       <%= f.label :password %><span class = "user_mail_info">(必須)</span>
       <% if @minimum_password_length %>
       <em>(<%= @minimum_password_length %> 文字以上)</em>
       <% end %><br />
       <%= f.password_field :password, autocomplete: "new-password" %>
     </div>

     <div class="field">
       <%= f.label :password（confirmation）%><span class = "user_mail_info">(必須)</span><br />
       <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
     </div>

     <div class="actions">
        <%= f.submit "新規登録" %>
     </div>
   <% end %>
  </div>

  <div class = "user_session_content" >
   既に登録済みの方は
   <%= link_to  user_session_path do %>
    <span class = user_session_content_sub>こちら</span>
   <% end %>
    からログインしてください。
  </div>
</div>
